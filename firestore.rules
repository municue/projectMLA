rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ðŸ”¹ Helper functions
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    function isUser() {
      return request.auth != null;
    }

    // ðŸ”¹ Public collections (readable by everyone)
    match /topics/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /subtopics/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /formulas/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /questions/{docId} {
      allow read: if true; // anyone can load practice questions
      allow write: if isAdmin(); // only admin can add/update questions
    }

    match /homepage_feed/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ðŸ”¹ History (user-specific)
    match /history/{docId} {
      allow read, write: if isUser();
    }

    // ðŸ”¹ User profile
    match /users/{userId} {
      allow read: if isUser() && request.auth.uid == userId;
      allow write: if isUser() && request.auth.uid == userId;

      // ðŸ”¹ Progress tracking
      match /progress/{docId} {
        allow read: if isUser() && request.auth.uid == userId;
        allow write: if isUser() && request.auth.uid == userId;
      }

      // ðŸ”¹ Practice progress (used by Practice.jsx)
      match /practiceProgress/{docId} {
        // ðŸ‘‡ This is the key fix:
        // Temporarily allow reads for all users if still getting permission-denied errors.
        allow read: if request.auth != null && request.auth.uid == userId;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ðŸ”¹ Calculations (Calculator page)
    match /calculations/{docId} {
      allow read, write: if isUser();
    }
  }
}
