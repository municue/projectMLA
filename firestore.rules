rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
    function isUser() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isUser() && (request.auth.uid == userId || request.auth.token.email == userId);
    }

    // Public collections
    match /topics/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /subtopics/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /formulas/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /questions/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /homepage_feed/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // History â€” per user
    match /history/{docId} {
      allow read, write: if isUser();
    }

    // User documents (ID may be UID or email)
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Progress tracking
      match /progress/{docId} {
        allow read, write: if isOwner(userId);
      }

      // Practice progress
      match /practiceProgress/{docId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Calculations
    match /calculations/{docId} {
      allow read, write: if isUser();
    }
  }
}
